<section class="categories container mx-auto py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-xl font-bold">Categories</h1>
        <a href="/admin/categories/create" class="btn-primary px-4 py-2 rounded-full text-white">Add New</a>
    </div>

    <% if(messages.success) { %>
    <div class="alert success mb-4">
        <%= messages.success %>
    </div>
    <% } %>

    <% if(messages.error) { %>
    <div class="alert error mb-4">
        <%= messages.error %>
    </div>
    <% } %>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Name</th>
                    <th class="py-3 px-6 text-left">Slug</th>
                    <th class="py-3 px-6 text-center">Date Created</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm">
                <% if(categories.length > 0) { %>
                    <% categories.forEach(function(category) { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left"><%= category.name %></td>
                            <td class="py-3 px-6 text-left"><%= category.slug %></td>
                            <td class="py-3 px-6 text-center"><%= category.createdAt.toLocaleDateString() %></td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex item-center justify-center">
                                    <a href="/admin/categories/edit/<%= category._id %>" class="w-4 mr-4 transform hover:text-yellow-500 hover:scale-110">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                        </svg>
                                    </a>
                                    <form action="/admin/categories/<%= category._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="w-4 mr-2 transform hover:text-red-500 hover:scale-110">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr class="border-b border-gray-200">
                        <td colspan="4" class="py-3 px-6 text-center">No categories found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section> 